@using SinglePageArchitectureTraining.Controllers.Dtos.PersonDtos
@model CreatePersonDto

@{
    ViewBag.Title = "People List";
}
<form id="form">
    <div class="row form-groups center" id="panelBar">
        <input class="btn btn-outline-success col-sm-1 m-3" type="button" name="saveButton" id="btnSave" value="Save" /><br />
        <input class="btn btn-secondary col-sm-1 m-3" type="button" name="refreshButton" id="btnRefresh" value="Refresh" /><br />
    </div>

    <div class="form-group">
        <input hidden id="Id" />
        @Html.LabelFor(model => model.FirstName, "FirstName", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.FirstName, new { @id = "firstName", htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>

        @Html.LabelFor(model => model.LastName, "LastName", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.LastName, new { @id = "lastName", htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>

        @Html.LabelFor(model => model.NationalCode, "NationalCode", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.NationalCode, new { @id = "nationalCode", htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NationalCode, "", new { @class = "text-danger" })
        </div>
    </div>
</form>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Full Name
                </th>
                <th>
                    National Code
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
<div id="test"></div>

<script src="~/js/SinglePage.js"></script>
