@model IEnumerable<SelectDTO>
@using RepositoryDesignPatternTraining.Controllers.DTOs.PersonDTOs;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p style="color:red;font-weight:bold">
    @TempData["Index"]
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                National Code
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var person in Model) {
        <tr>
            <td>
                @person.FirstName
            </td>
            <td>
                @person.LastName
            </td>
            <td>
                @person.NationalCode
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@person.Id">Edit</a> | 
                <a asp-action="Details" asp-route-id="@person.Id">Details</a> | 
                <a asp-action="Delete" asp-route-id="@person.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>